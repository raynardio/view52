<table class="table table-striped">
  <thead>
  <th><%= t :title %></th>
  <th><%= t :views %></th>
  <th><%= t :tags %></th>
  <!--    <th><%#= t :content %></th>-->
  </thead>
  <% notes.each do |note| %>
    <tr>
      <td>
        <a href="javascript:" class="note" data-id="<%= note.id %>"><%= note.title %></a>
      </td>
      <td>
        <%= note.views.map(&:short_name).join ', ' %>
      </td>
      <td>
        <%= note.tags.map(&:label).join ', ' %>
      </td>
      <!--      <td>-->
      <%#= note.text.html_safe %>
      <!--      </td>-->
    </tr>
  <% end %>
</table>

<% content_for :footer do %>
  <script>
    $(() => {
      $('a.note').click(function() {
          const id = $(this).data('id');
          editNoteModal(id);
      });
    });
  </script>
<% end %>
