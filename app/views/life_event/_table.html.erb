<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t :title %></th>
      <th><%= t :date_range %></th>
      <th><%= t :views %></th>
    </tr>
  </thead>
  <% life_events.each do |life_event| %>
    <tr>
      <td>
        <a href="javascript:" class="life-event" data-id="<%= life_event.id %>"><%= life_event.title %></a>
      </td>
      <td>
        <%= life_event.from_date.strftime '%m/%d/%Y' %> -
        <%= (life_event.to_date || Date.today).strftime '%m/%d/%Y' %>
      </td>
      <td>
        <%= life_event.views.map(&:short_name).join ', ' %>
      </td>
    </tr>
  <% end %>
</table>
