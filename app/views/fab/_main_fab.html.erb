        <span class="mdc-fab__icon material-icons">notes</span>
      </button>
    </span>
  </span>
  <span>
    <button type="button" id="fab-toggle" class="mdc-fab toggle"
        data-toggle="tooltip" data-placement="top" title="<%= t :create %>">
      <span class="mdc-fab__icon material-icons">add</span>
    </button>
  </span>
</span>

<%= content_for :footer do %>
  <script>
    $(() => {
      const $fabButtons = $('.fab-button button');

      $fabButtons.each(function () {
        const $button = $(this);
        const modal = $button.data('modal');

        $button.click(() => {
          $(`#modal-${modal}`).modal('show');
        });
      });
    });
  </script>
<% end %>
